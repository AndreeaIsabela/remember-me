# Application
NODE_ENV=development
PORT=3000

# MongoDB
# Use 'mongodb' when running with Docker Compose
# Use 'localhost' when running the API locally (npm run start:dev)
MONGODB_URI=mongodb://localhost:27017/remember-me

# JWT Configuration (CHANGE JWT_SECRET IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Email - MailHog
# Use 'mailhog' when running with Docker Compose
# Use 'localhost' when running the API locally (npm run start:dev)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_FROM=noreply@remember-me.local

